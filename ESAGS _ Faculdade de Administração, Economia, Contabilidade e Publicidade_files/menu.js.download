$(document).ready(function() {
	$('*:not(header.header)').click(function(e){
		if( $('header.header').hasClass('active') ){
			if( $(e.target).closest("header.header").length != 1 && $('div:not(.menu-anchor)') && $(e.target).closest(".menu-anchor").length != 1){
				$(".menu-anchor").removeClass("active");
				$('header.header').removeClass('active');
				$("header.header").removeClass("active");
			}
		}
	});

	$(".menu-anchor").click(function(e){
		e.preventDefault();
		if( $('header.header').hasClass('active') ){
			$("header.header").removeClass("active");
			$(".menu-anchor").removeClass("active");
			$("header.header").removeClass("active");
		}else{
			setTimeout(function(){
				$("header.header").addClass("active");
				$(".menu-anchor").addClass("active");
				$("header.header").addClass("active");
			}, 100);
		}
	});
});