                $('html, body').animate({ 
                    scrollTop: $('#bolsa').offset().top
                }, 2000);
            }  
        }, 1000);
    }

    $('.modal .close').on('click',function(){
        $(".modal iframe").attr('src','');
        $('.modal').removeClass('active');
    })
});

